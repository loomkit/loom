{
    "name": "loomkit/loom",
    "description": "üì¶Ô∏è Loom provides useful commands, modules, features and resources for your web application.",
    "homepage": "https://loomkit.github.io",
    "license": "MIT",
    "keywords": [
        "laravel",
        "loom",
        "loomkit",
        "php"
    ],
    "authors": [
        {
            "name": "Sigui Kess√© Emmanuel",
            "email": "siguici@proton.me",
            "homepage": "https://siguici.deno.dev"
        }
    ],
    "support": {
        "source": "https://github.com/loomkit/loom",
        "issues": "https://github.com/loomkit/loom/issues",
        "chat": "https://github.com/orgs/loomkit/discussions"
    },
    "require": {
        "php": "^8.3",
        "illuminate/console": "^12.26",
        "illuminate/support": "^12.26",
        "laravel/installer": "^5.17",
        "laravel/prompts": "^0.3",
        "nunomaduro/termwind": "^2.3",
        "symfony/console": "^7.3",
        "spatie/laravel-package-tools": "^1.92"
    },
    "require-dev": {
        "filament/filament": "^4.0",
        "sikessem/framework": "^0.10.0",
        "sikessem/laravel-devtools": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Loom\\": "packages/core/src/",
            "Loom\\Installer\\": "packages/installer/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loom\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse --ansi --memory-limit=-1 --debug",
        "check": "pint --test -v",
        "coverage": "pest --coverage",
        "discover": "testbench package:discover --ansi",
        "debug": [
            "@verify",
            "@check",
            "@analyse",
            "@inspect",
            "@review",
            "@test"
        ],
        "init:tools": [
            "psalm --init",
            "rector init",
            "pest --init"
        ],
        "fix": [
            "@refactor",
            "@improve",
            "@format",
            "@lint"
        ],
        "format": "psalter --issues=all",
        "improve": "phpinsights fix",
        "inspect": "psalm --no-diff",
        "lint": "pint -v",
        "post-autoload-dump": ["@discover"],
        "test": "pest --colors=always",
        "refactor": "rector",
        "retest": "pest --retry",
        "review": "rector --dry-run --debug",
        "verify": "phpinsights analyse"
    },
    "replace": {
        "loom/core": "self.version",
        "loom/installer": "self.version"
    },
    "bin": [
        "bin/loom"
    ],
    "extra": {
        "laravel": {
            "providers": ["Loom\\LoomServiceProvider"],
            "aliases": {
                "Loom": "Loom\\LoomManager"
            },
            "dont-discover": []
        },
        "branch-alias": {
            "dev-main": "0.x-dev"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
